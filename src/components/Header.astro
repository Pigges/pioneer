    const quotes = ["Javascript would either die quickly or be around for at least 20 years.", "The Brave idea is to have a frictionless Bitcoin."];
    document.querySelector('#quote').innerText = `"${quotes[Math.floor(Math.random() * quotes.length)]}"`
