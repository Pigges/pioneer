            <img src="/assets/avatar.webp" alt="Avatar">
        </figure>
        <p class="text-2xl"><strong>Brendan Eich</strong></p>
        <div class="dropdown absolute left-0 p-5 rounded-lg bg-slate-500">
            <p>Age: {calculateAge(new Date('4 July 1961'))}</p>
        </div>
    </section>
    <section class="center hidden lg:block">
